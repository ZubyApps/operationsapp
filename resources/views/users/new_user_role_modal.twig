<div class="modal fade modal-md" id="newUserRoleModal" tabindex="-1" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title">Staff Role</h5>
				<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
			</div>
			<div class="modal-body">
				<div class="form-outline form-white mb-3 px-2">
					<select class="form-select form-select-md" aria-label="User" name="user">
						<option value="">Select Staff</option>
						{% for user in users %}
							<option value="{{ user.id }}">{{ user.firstname }}</option>
						{% endfor %}
					</select>
				</div>
				<div class="form-outline form-white mb-3 px-2">
					<select class="form-select form-select-md" aria-label="UserRole" name="userRole">
						<option value="">Set role</option>
						<option value="Creator">Creator</option>
						<option value="Editor">Editor</option>
						<option value="Admin">Admin</option>
						<option value="Unset">Unset</option>
					</select>
				</div>
			</div>
			<div class="modal-footer px-5">
				<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
					<i class="bi bi-x-circle me-1"></i>
					Close
				</button>
				<button type="button" class="btn bg-primary text-white save-role-btn">
					<i class="bi bi-check-circle me-1"></i>
					Save
				</button>
			</div>
		</div>
	</div>
</div>
