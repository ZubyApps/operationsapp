{% extends 'layout.twig' %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('users') }}
{% endblock %}

{% block title %}Users{% endblock %}

{% block content %}
    <div class="Users container content-body">
    <h2 class="bold mb-4 text-primary d-flex justify-content-center align-items-center">Staff</h2>
        <div class="d-flex justify-content-end mb-4">
            <div class="">
                <button type="button" class="btn btn-primary text-white text-start" id="registerUser">
                <i class="bi bi-plus-circle me-1"></i>
                Register
                </button>
                <button type="button" class="btn btn-primary text-white" id="openNewUserRoleModal" data-bs-toggle="modal" data-bs-target="#newUserRoleModal">
                <i class="bi bi-plus-circle me-1"></i>
                Roles
                </button>
            </div>
        </div>
{% include '/users/new_user_role_modal.twig' %}
{% include '/users/user_modal.twig' with {modal: {title: 'Edit Staff Profile', id: 'editUserModal', isEdit: true}} %}

        <div class="">
            <table id="usersTable" class="row-border hover compact order-column stripe">
                <thead>
                    <tr>
                        <th>First name</th>
                        <th>Phone No.</th>
                        <th>Jobs</th>
                        <th>Payments</th>
                        <th>Role</th>
                        <th>Department</th>
                        <th>HOD</th>
                        <th>Created at</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>
{% endblock %}
