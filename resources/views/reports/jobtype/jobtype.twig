{% extends 'layout.twig' %}


{% block javascripts %}
	{{ parent() }}
	{{ encore_entry_script_tags('jobtype_reports') }}
{% endblock %}

{% block title %}Job Type Reports
{% endblock %}

{% block content %}
	<div class="JobType container content-body">
		<h2 class="bold mb-2 text-primary d-flex justify-content-center align-items-center">Job Type Reports</h2>
		<div class="d-flex justify-content-end text-start mb-4">
			<div>
				<span>From</span>
				<input type="date" name="from" min="" class="form-control form-control-sm" required/>
			</div>
			<div class="mx-2">
				<span>To</span>
				<input type="date" name="to" min="" class="form-control form-control-sm" required/>
			</div>
		</div>
		<div class="d-flex justify-content-end">
			<div>
				<button type="button" class="btn btn-primary text-white search-date-btn">
					Get Report
				</button>
			</div>
		</div>

		{% include 'reports/jobtype/list_jobs_modal.twig' with {modal: {title: 'List of Jobs', id: 'listJobsModal', isMonth: false }} %}

		<div class="container">
			<table id="jobTypeReports" class="row-border hover compact order-column stripe d-none">
				<thead>
					<tr>
						<th>Type</th>
						<th>Bill</th>
						<th>Payments</th>
						<th>Unpaid</th>
						<th>No. of Jobs</th>
					</tr>
				</thead>
				<tbody></tbody>
				<tfoot class="fw-bolder text-primary">
					<tr>
						<td></td>
						<td></td>
						<td></td>
						<td></td>
						<td></td>
					</tr>
				</tfoot>
			</table>
		</div>
		<div class="overflow-auto">
			<div class="mx-4" style="width: 800px; height:500px;">
				<canvas id="myChart" class="d-none"></canvas>
			</div>
		</div>
		<div class="overflow-auto">
			<div class="mx-4" style="width: 800px; height: 500px;">
				<canvas id="myChart2" class="d-none"></canvas>
			</div>
		</div>
	</div>
{% endblock %}
