<div class="modal fade modal-lg" id="{{ modal.id }}" tabindex="-1" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title fs-4">{{ modal.title }}</h5>
				<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
			</div>
			<div class="modal-body">
				<div>
					<label for="basic-url" class="form-label fs-5">Payment breakdown</label>
					<table id="paymentDetailsTable" class="row-border hover compact order-column stripe">
						<thead>
							<tr>
								<th>Date</th>
								<th>Amount</th>
								<th>Method</th>
								<th>Staff</th>
								<th>Actions</th>
							</tr>
						</thead>
						<tbody></tbody>
					</table>
				</div>


			</div>
			<div class="modal-footer px-5">
				<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
					<i class="bi bi-x-circle me-1"></i>
					Close
				</button>
			</div>
		</div>
	</div>
</div>
