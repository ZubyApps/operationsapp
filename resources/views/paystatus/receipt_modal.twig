<div class="modal fade modal-lg" id="{{ modal.id }}" tabindex="-1" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title fs-4">{{ modal.title }}</h5>
				<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
			</div>
			<div class="modal-body receipt overflow-auto">
				<header class="d-flex flex-wrap justify-content-between align-items-top mb-4">
					<div class="">
						<img src="{{ asset('build/images/tripple a logo.jpg') }}" width="128" height="128" alt="OperationsApp Logo"/>
					</div>
					<div class="text-right p-0">
						<h5 class="text-primary">Tripple A Studios</h5>
						<p>
							No. 8 Benson Uphah Street
							<br>
							Nyiman layout
							<br>
							Makurdi
							<br>
							Benue State
							<br>
							{{ date() | date('F j, Y') }}</p>
					</div>
				</header>
				<div class="text-center">
					<label for="basic-url" class="form-label fs-2 mb-3 fw-bold ">Receipt</label>
				</div>
				<div class="mb-3">
					<label for="basic-url" class="form-label fs-5">Client & Job Details</label>
					<table id="jobDetailsTable" class="row-border hover compact">
						<thead>
							<tr>
								<th>Name</th>
								<th>Phone</th>
								<th>Job type</th>
								<th>Status</th>
							</tr>
						</thead>
						<tbody></tbody>
					</table>
				</div>
				<div class="mb-3">
					<label for="basic-url" class="form-label fs-5">Payment Status</label>
					<table id="paystatusTable" class="row-border hover compact">
						<thead>
							<tr>
								<th>Bill</th>
								<th>Paid</th>
								<th>Balance</th>
								<th>Status</th>
							</tr>
						</thead>
						<tbody></tbody>
					</table>
				</div>

				<div>
					<label for="basic-url" class="form-label fs-5">Payment breakdown</label>
					<table id="paymentReceiptDetailsTable" class="row-border hover">
						<thead>
							<tr>
								<th>Date</th>
								<th>Amount</th>
								<th>Method</th>
								<th>Received by</th>
							</tr>
						</thead>
						<tbody></tbody>
					</table>
				</div>
			</div>
			<div class="modal-footer px-5">
				<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
					<i class="bi bi-x-circle me-1"></i>
					Close
				</button>
				<button type="button" class="btn bg-primary text-white print-receipt-btn">
					<i class="bi bi-check-circle me-1"></i>
					Download
				</button>
			</div>
		</div>
	</div>
</div>
