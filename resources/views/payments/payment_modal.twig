<div class="modal fade modal-md" id="{{ modal.id }}" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">{{ modal.title }}</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                        <div class="form-outline form-white mb-3">
                                <input type="number" name="amountPaid" id="id" required
                                class="form-control form-control-md"
                                placeholder="Amount Paid" />
                            </div>
                            <div class="form-outline form-white mb-3">
                                <input type="text" name="description"
                                class="form-control form-control-md"
                                placeholder="Description" />
                            </div>
                            
                        </div>
            <div class="modal-footer px-5">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="bi bi-x-circle me-1"></i>
                    Close
                </button>
                <button type="button" class="btn bg-primary text-white {{ modal.isEdit ? 'save' : 'record' }}-payment-btn">
                    <i class="bi bi-check-circle me-1"></i>
                    {{ modal.isEdit ? 'Save' : 'Record' }}
                </button>
            </div>
        </div>
    </div>
</div>
